<div class="groups-index">
  <div class="banner">
    <h1>Groups</h1>
  </div>

  <ul class="groups-list">
    <% @groups.each do |group| %>
      <% date = group.created_at.to_date %>

      <div class="card">
        <div class="image"></div>
        
        <div class="card-body">
          <div class="details">
            <h5><%= group.name %></h5>
            <p><%= "#{format_date(date)}" %></p>
          </div>
        </div>
      </div>
      
    <% end %>
  </ul>


  <%= button_to "Create a new group", new_group_path, method: 'get' %>
</div>