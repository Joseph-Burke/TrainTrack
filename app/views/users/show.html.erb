<div class="users-show">

  <div class="header">
    <img class="profile-picture" src=<%= @user.avatar.attached? ? url_for(@user.avatar) : '/paw.png' %>>
    <h2 class="username"><%= @user.name %></h2>
  </div>

  <ul class="links">
    <li><%= link_to "Transactions", transactions_path %></li>
    <li><%= link_to "External Transactions", external_transactions_path %></li>
    <li><%= link_to "Groups", groups_path %></li>
    <li><%= link_to "Edit Account", edit_user_path %></li>
    <li><%= link_to "Log Out", logout_path, method: :delete %></li>
  </ul>


</div>